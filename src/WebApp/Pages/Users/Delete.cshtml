@page "{id:int}"
@model WebApp.Pages.AppUsers.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

@if (Model.Target is null)
{
    <div class="alert alert-danger">User not found.</div>
}
else
{
    <div class="alert alert-warning">
        次のユーザーを削除します。よろしいですか？
    </div>

    <dl class="row">
        <dt class="col-sm-2">UserName</dt>
        <dd class="col-sm-10">@Model.Target.UserName</dd>

        <dt class="col-sm-2">DisplayName</dt>
        <dd class="col-sm-10">@Model.Target.DisplayName</dd>

        <dt class="col-sm-2">IsAdmin</dt>
        <dd class="col-sm-10">@Model.Target.IsAdmin</dd>
    </dl>

    <form method="post">
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-secondary" asp-page="./Index">Cancel</a>
    </form>
}